<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("./layout/layout.css.ejs") %>
</head>

<body>

    <%- include("./layout/layout.header.ejs") %>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="m-0 font-weight-bold text-primary">Quản lý tài khoản</h6>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        <a style="text-align: right;" class="dropdown-item" href="#" data-toggle="modal"
                            data-target="#addcate">
                            <i class="fas fa-plus-square" style='font-size:20px; color: 
                        #4e73df;'></i> Add New
                        </a>
                    </div>
                </div>


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>User name</th>                           
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Option</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% for (let index=0; index < user_list.length; index++) {%>
                                <tr>
                                    <td>
                                        <%= user_list[index].dataValues.username %>
                                    </td>
                                    <td>
                                        <%= user_list[index].dataValues.email %>
                                    </td>
                                    <td>
                                        <%= user_list[index].dataValues.phone %>
                                    </td>
                                    <td>
                                        <%= user_list[index].dataValues.address %>
                                    </td>
                                    
                                   
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-primary " type="button" data-toggle="dropdown">
                                                <i class="fas fa-align-justify"></i></button>
                                            <ul class="dropdown-menu">
                                                <li> <a class="dropdown-item" href="#" data-toggle="modal"
                                                        data-target="#detailcate<%=user_list[index].dataValues.id %>">
                                                        <i class="fas fa-eye"
                                                            style='font-size:20px; color: lightsalmon;'></i> Details
                                                    </a>
                                                </li>

                                                <li> <a class="dropdown-item" href="#" data-toggle="modal"
                                                        data-target="#updatecate<%=user_list[index].dataValues.id %>">
                                                        <i class='fas fa-pencil-ruler'
                                                            style='font-size:20px; color: blue;'></i> Update
                                                    </a>
                                                </li>
                                                <li> <a class="dropdown-item"
                                                        href="./delete_user/<%=user_list[index].dataValues.id %>"
                                                        onclick="return confirm('Are you sure you want to delete this item?');"><i
                                                            class="fas fa-trash"
                                                            style='font-size:20px; color: 	#FF3333;'></i> Delete</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr> 

                                
                                <% }; %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <% for (let index=0; index < user_list.length; index++) {%>
            <div class="modal fade" id="detailcate<%=user_list[index].dataValues.id %>" tabindex="-1" role="dialog"
                aria-labelledby="exampleModalLabel" aria-hidden="true" >
                <div class="modal-dialog" role="document">
                    <div class="modal-content" style="width: 150%;">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Chi tiết thương hiệu</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>User name</th>
                                        <td>
                                            <%=user_list[index].dataValues.username %>
                                        </td>
    
                                    </tr>
    
                                    <tr>
                                        <th>Password</th>
                                        <td>
                                            <%=user_list[index].dataValues.password %>
                                        </td>
    
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>
                                            <%=user_list[index].dataValues.email %>
                                        </td>
    
                                    </tr>
                                    <tr>
                                        <th>Phone</th>
                                        <td>
                                            <%=user_list[index].dataValues.phone %>
                                        </td>
    
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td>
                                            <%=user_list[index].dataValues.address %>
                                        </td>
    
                                    </tr>
                                   
                                </tbody>
                            </table>
    
                        </div>
                    </div>
                </div>
            </div>


            <form action="/user/update_user/<%=user_list[index].dataValues.id %>" method="POST"
                enctype="application/x-www-form-urlencoded">
                <div class="modal fade" id="updatecate<%=user_list[index].dataValues.id %>" tabindex="-1"
                    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    
                    <div class="modal-dialog" role="document">
                        <div class="modal-content" style="width: 120%;">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Cập nhật tài khoản
                                </h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group">
                                    <label for="exampleInputPassword1">User Name</label>
                                    <input type="text" class="form-control" name="username" value="<%=user_list[index].dataValues.username %>" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Password</label>
                                    <input type="text" class="form-control" name="password" value="<%=user_list[index].dataValues.password %>" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Email</label>
                                    <input type="text" class="form-control" name="email" value="<%=user_list[index].dataValues.email %>" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Phone</label>
                                    <input type="text" class="form-control" name="phone" value="<%=user_list[index].dataValues.phone %>" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Address</label>
                                    <input type="text" class="form-control" name="address" value="<%=user_list[index].dataValues.address %>" >
                                </div>
                                <button type="submit" class="btn btn-primary">Update</button>&nbsp;&nbsp;&nbsp;&nbsp;                            
                                <a href="/user/list" class="btn btn-primary">Back</a>
                        </div>
    
                        </div>
                    </div>
                </div>
            </form>
            <% }; %>
        

                <%- include("./layout/layout.footer.ejs") %>
                    <%- include("./layout/layout.js.ejs") %>
</body>

</html>