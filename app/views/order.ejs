<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("./layout/layout.css.ejs") %>
</head>

<body>

    <%- include("./layout/layout.header.ejs") %>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-md-4">
                        <h6 class="m-0 font-weight-bold text-primary">Quản lý đơn hàng</h6>
                    </div>
                    <div class="col-md-4">

                    </div>
                    <div class="col-md-4">
                        
                    </div>
                </div>


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Order ID</th>  
                                <th>User Name</th>                           
                                <th>Order Date</th>
                                <th>Total Price</th>
                                <th>Address</th>
                                <th>Status</th>
                                <th>Option</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% order_list.rows.forEach(function(order){ %>
                                <tr>
                                    <td>
                                        <%= order.id %>
                                    </td>
                                    <td>
                                        <%= order.username %>
                                    </td>
                                    <td>
                                        <%= order.orderate %>
                                    </td>
                                    <td>
                                        <%= order.totalprice %>
                                    </td>
                                    <td>
                                        <%= order.address %>
                                    </td>
                                    <td>
                                        <%= order.status %>
                                    </td>
                                    
                                   
                                    <td>
                                        
                                           
                                            <ul style="list-style: none;display: flex;">
                                                <li> <a href="/order/byid/<%=order.id %>">
                                                        <i class="fas fa-eye"
                                                            style='font-size:20px; color: lightsalmon;'></i> 
                                                    </a>
                                                </li>

                                                <li> <a  href="#" data-toggle="modal"
                                                        data-target="#updatecate<%=order.id %>">
                                                        <i class='fas fa-pencil-ruler'
                                                            style='font-size:20px; color: blue;'></i> 
                                                    </a>
                                                </li>
                                                <li> <a 
                                                        href="./delete_order/<%=order.id %>"
                                                        onclick="return confirm('Are you sure you want to delete this item?');"><i
                                                            class="fas fa-trash"
                                                            style='font-size:20px; color: 	#FF3333;'></i> </a>
                                                </li>
                                            </ul>
                                       
                                    </td>
                                </tr> 

                                
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <% order_list.rows.forEach(function(order){ %>
           
            <form action="/order/update_status/<%=order.id %>" method="POST"
                enctype="application/x-www-form-urlencoded">
                <div class="modal fade" id="updatecate<%=order.id %>" tabindex="-1"
                    role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    
                    <div class="modal-dialog" role="document">
                        <div class="modal-content" style="width: 120%;">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Cập nhật trạng thái đơn hàng
                                </h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                
                                <div class="form-group">
                                    <label for="exampleInputPassword1">Status</label>
                                    <input type="text" class="form-control" name="status" value="<%=order.status%>"/>
            
                                </div>
                                <!-- <div class="form-group">
                                    <label for="exampleInputPassword1">Status</label>
                                    <select name="status">
                                        
                                            <option value="Chờ xử lý">
                                              chờ xử lý
                                            </option>
                                            <option value="Đã xử lý">
                                                chờ xử lý
                                              </option>
                                              <option value="Chờ lấy hàng">
                                                chờ xử lý
                                              </option>
                                              <option value="Đang giao hàng">
                                                chờ xử lý
                                              </option>
                                              <option value="Giao hàng thành công">
                                                chờ xử lý
                                              </option>
                                        
                                           
                                    </select>
                                </div> -->
                                
                                <button type="submit" class="btn btn-primary">Create</button>&nbsp;&nbsp;&nbsp;&nbsp;                            
                                <a href="/order/list" class="btn btn-primary">Back</a>
                        </div>
    
                        </div>
                    </div>
                </div>
            </form>
        <% }); %>
        

                <%- include("./layout/layout.footer.ejs") %>
                    <%- include("./layout/layout.js.ejs") %>
</body>

</html>